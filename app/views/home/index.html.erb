                                                        "data-columns": "[" + index + "]",
                                                        placeholder: "Filtrar"
                                                    }
                                                }
                                            ]
                                        }))
                                    };
                                    tHead.childNodes.push(filterHeaders);
                                    return table;
                                }
                            });
                        }
                    });
