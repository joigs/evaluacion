<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 my-8 bg-gray-900 p-6 rounded-lg shadow-md">
  <h2 class="text-2xl font-semibold text-white mb-6">
    Editar Registro – Otros
  </h2>

  <%= form_with(model: @otro, builder: CustomFormBuilder, local: true, class: "space-y-4") do |form| %>
    <% if @otro.errors.any? %>
      <% error_messages = @otro.errors.full_messages.map { |msg| "<li>#{j msg}</li>" }.join %>
      <%= javascript_tag do %>
        Swal.fire({
        icon: 'error',
        title: 'Error: no se pudo guardar el registro',
        html: '<ul style="text-align: left;">' + '<%= raw error_messages %>' + '</ul>',
        confirmButtonText: 'Entendido'
        })
      <% end %>
    <% end %>

    <div data-controller="empresa-select" class="relative">
      <%= form.label :empresa_nombre, "Empresa", class: "block text-gray-300 mb-1" %>

      <div class="flex">
        <%= form.text_field :empresa_nombre,
                            value: (@otro.empresa&.nombre || ""),
                            class: "flex-grow px-3 py-2 bg-gray-700 text-white rounded-l-md focus:outline-none",
                            data: { "empresa-select-target": "input" } %>

        <select data-action="empresa-select#pick"
                data-empresa-select-target="select"
                class="px-2 py-2 bg-gray-800 text-white rounded-r-md border-l border-gray-600">
          <option value="">—</option>
          <% Empresa.order(:nombre).pluck(:nombre).each do |nombre| %>
            <option value="<%= nombre %>"><%= nombre %></option>
          <% end %>
        </select>
      </div>

      <%= form.hidden_field :empresa_nombre_hidden,
                            value: "",
                            data: { "empresa-select-target": "hidden" } %>
    </div>

    <div class="form-group">
      <%= form.label :fecha, "Fecha de venta", class: "block text-gray-300" %>
      <%= form.text_field :fecha,
                          placeholder: "Selecciona una fecha",
                          id: "fecha_picker",
                          value: (@otro.fecha&.strftime("%Y-%m-%d")),
                          class: "mt-1 block w-full px-3 py-2 bg-gray-700 text-white rounded-md" %>
    </div>

    <div class="form-group">
      <%= form.label :n1, "Número de trámites", class: "block text-gray-300" %>
      <%= form.number_field :n1,
                            min: 0,
                            required: true,
                            class: "mt-1 block w-full px-3 py-2 bg-gray-700 text-white rounded-md" %>
    </div>

    <div class="form-group">
      <%= form.label :v1, "Valor de comisión por trámite (UF)", class: "block text-gray-300" %>
      <%= form.number_field :v1,
                            step: 0.0001,
                            min: 0,
                            required: true,
                            class: "mt-1 block w-full px-3 py-2 bg-gray-700 text-white rounded-md" %>
    </div>

    <div class="form-group">
      <%= form.label :t_pesos, "Total valor de trámites (CLP)", class: "block text-gray-300" %>
      <%= form.number_field :t_pesos,
                            step: 0.01,
                            min: 0,
                            required: true,
                            value: @otro.t_pesos,
                            class: "mt-1 block w-full px-3 py-2 bg-gray-700 text-white rounded-md" %>

    </div>

    <div>
      <%= form.submit "Guardar cambios", class: "w-full bg-blue-600 hover:bg-blue-700 text-gray-900 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
    </div>
  <% end %>
</div>

<script>
    function initFechaPicker() {
        const el = document.getElementById("fecha_picker");
        if (el && !el._flatpickr) {
            flatpickr(el, {
                locale: "es",
                dateFormat: "Y-m-d",
                altInput: true,
                altFormat: "d-m-Y",
                minDate: "2020-01-01",
                maxDate: "3000-12-31",
                static: false
            });
        }
    }

    document.addEventListener("DOMContentLoaded", initFechaPicker);
    document.addEventListener("turbo:load",     initFechaPicker);
    document.addEventListener("turbo:render",   initFechaPicker);
    window.addEventListener( "pageshow",        initFechaPicker);

    document.addEventListener("turbo:before-cache", () => {
        const el = document.getElementById("fecha_picker");
        if (el && el._flatpickr) {
            el._flatpickr.destroy();
            el._flatpickr = null;
        }
    });
</script>
