<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 my-8 text-gray-200">
  <% if notice.present? %>
    <p id="notice" class="mb-5 px-4 py-2 bg-green-900/30 border border-green-600 text-green-400 font-medium rounded-lg inline-block">
      <%= notice %>
    </p>
  <% end %>

  <% content_for :title, "Oxies" %>


  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl sm:text-4xl font-bold text-black">Oxy</h1>

  </div>
  <div class="bg-gray-900 p-4 rounded-lg shadow-md">
    <h2 class="text-xl font-bold mb-4">Listado</h2>

    <% if @oxies.blank? %>
      <p class="text-gray-400">No hay registros.</p>
    <% else %>
      <ul id="oxies" class="space-y-4">
        <% @oxies.each do |oxy| %>
          <li class="bg-gray-800 rounded-md p-4 flex justify-between items-center">
            <div>
              <p class="font-semibold">
                Mes: <%= oxy.month.to_s.rjust(2, '0') %> &nbsp;|&nbsp;
                AÃ±o: <%= oxy.year %>
              </p>
              <p class="text-sm text-gray-400">
                Conductores: <%= number_with_delimiter(oxy.numero_conductores) %>
                &nbsp;|&nbsp;
                Suma: <%= number_with_precision(oxy.suma, precision: 2) %>
                &nbsp;|&nbsp;
                Total (UF): <%= number_with_precision(oxy.total_uf, precision: 2) %>
                <% if oxy.arrastre.present? %>
                  &nbsp;|&nbsp;
                  Arrastre: <%= number_with_delimiter(oxy.arrastre) %>
                <% end %>
              </p>
            </div>

            <div class="flex items-center gap-3">
              <%= link_to "Ver", oxy,
                          class: "px-3 py-1 bg-blue-600 hover:bg-blue-700 text-gray-900 font-bold rounded-md shrink-0" %>
              <%= link_to "Modificar", edit_oxy_path(oxy),
                          class: "px-3 py-1 bg-blue-600 hover:bg-blue-700 text-gray-900 font-bold rounded-md shrink-0" %>
            </div>
          </li>

      <% end %>
      </ul>
    <% end %>
  </div>
</div>
