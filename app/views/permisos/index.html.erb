<h1 class="text-2xl font-bold mb-4">Lista de Permisos</h1>

<table class="min-w-full bg-white border border-gray-200 rounded-lg">
  <thead class="bg-gray-100">
  <tr>
    <th class="py-2 px-4 border-b border-gray-200 text-left">Nombre</th>
    <th class="py-2 px-4 border-b border-gray-200 text-left">Descripción</th>
    <th class="py-2 px-4 border-b border-gray-200"></th>
    <th class="py-2 px-4 border-b border-gray-200"></th>
    <th class="py-2 px-4 border-b border-gray-200"></th>
  </tr>
  </thead>
  <tbody>
  <% @permisos.each do |permiso| %>
    <tr class="hover:bg-gray-50">
      <td class="py-2 px-4 border-b border-gray-200"><%= permiso.nombre %></td>
      <td class="py-2 px-4 border-b border-gray-200"><%= permiso.descripcion %></td>
      <td class="py-2 px-4 border-b border-gray-200">
        <%= link_to 'Mostrar',
                    permiso,
                    class: "text-blue-600 hover:underline" %>
      </td>
      <td class="py-2 px-4 border-b border-gray-200">
        <%= link_to 'Editar',
                    edit_permiso_path(permiso),
                    class: "text-yellow-600 hover:underline" %>
      </td>
      <td class="py-2 px-4 border-b border-gray-200">
        <%= link_to 'Eliminar', permiso,
                    data: { turbo_method: :delete, turbo_confirm: '¿Seguro que deseas eliminar este permiso?' },
                    class: "text-red-600 hover:underline" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="mt-4">
  <%= link_to 'Nuevo Permiso',
              new_permiso_path,
              class: "inline-block bg-green-600 hover:bg-green-700 text-white py-2 px-4 rounded" %>
</div>
