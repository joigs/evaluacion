<div id="<%= dom_id(ald) %>" class="w-full">
  <dl class="grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-2 text-gray-200">
    <div class="flex items-baseline gap-2">
      <dt class="text-gray-400">Mes</dt>
      <dd class="font-semibold"><%= ald.month %></dd>
    </div>

    <div class="flex items-baseline gap-2">
      <dt class="text-gray-400">Año</dt>
      <dd class="font-semibold"><%= ald.year %></dd>
    </div>

    <div class="flex items-baseline gap-2">
      <dt class="text-gray-400">Número trámites</dt>
      <dd class="font-semibold"><%= ald.n1 %></dd>
    </div>

    <div class="flex items-baseline gap-2">
      <dt class="text-gray-400">Total</dt>
      <dd class="font-semibold"><%= number_with_precision(ald.total, precision: 2) %> UF</dd>
    </div>
  </dl>
</div>
