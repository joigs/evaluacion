<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 my-8 text-gray-200">


  <% content_for :title, "Alds" %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl sm:text-4xl font-bold text-black">Ald</h1>

  </div>

  <div class="bg-gray-900 p-4 rounded-lg shadow-md">
    <h2 class="text-xl font-bold mb-4">Listado</h2>

    <% if @alds.blank? %>
      <p class="text-gray-400">No hay registros.</p>
    <% else %>
      <ul id="alds" class="space-y-4">
        <% @alds.each do |ald| %>
          <li class="bg-gray-800 rounded-md p-4 flex justify-between items-center">
            <%= render ald %>
            <%= link_to "Ver", ald,
                        class: "px-3 py-1 bg-blue-600 hover:bg-blue-700 text-gray-900 font-bold rounded-md ml-4 shrink-0" %>
            <%= link_to "Modificar", edit_ald_path(ald),
                        class: "px-3 py-1 bg-blue-600 hover:bg-blue-700 text-gray-900 font-bold rounded-md ml-4 shrink-0" %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
